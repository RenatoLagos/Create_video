{
  "id": "lower-thirds",
  "name": "Lower Thirds Style",
  "description": "Estilo de subtítulos en tercio inferior con fondo sólido",
  "typography": {
    "fontFamily": "Figtree",
    "fontWeight": 700,
    "fontSize": 48,
    "letterSpacing": "0.5px",
    "lineHeight": 1.3
  },
  "colors": {
    "primary": "#ffffff",
    "activeWord": "#00ff88",
    "unspokenWord": "#cccccc",
    "stroke": "#000000"
  },
  "stroke": {
    "width": 2,
    "enabled": true
  },
  "wordBackground": {
    "enabled": true,
    "color": "rgba(0, 0, 0, 0.9)",
    "opacity": 0.95,
    "borderRadius": 0,
    "padding": {
      "horizontal": 20,
      "vertical": 15
    }
  },
  "spacing": {
    "lineSpacing": 1.2,
    "wordSpacing": "0.15em"
  },
  "animations": {
    "style": "fade-only",
    "duration": 0.2,
    "easing": "ease-in-out",
    "slideDistance": 0,
    "fadeInDelay": 0.05,
    "fadeOutDelay": 0.05,
    "scaleEffect": {
      "enabled": false,
      "scale": 1.0,
      "duration": 0
    }
  },
  "chunking": {
    "maxChars": 12,
    "minDuration": 2.0,
    "fps": 30,
    "gapFrames": 5,
    "wordBreakPriority": [" ", ",", ".", ";", ":", "!", "?"]
  },
  "positioning": {
    "position": "bottom",
    "verticalAlign": "bottom",
    "horizontalAlign": "left",
    "maxWidth": "80%",
    "margin": {
      "top": "0%",
      "bottom": "8%",
      "left": "5%",
      "right": "5%"
    }
  }
}